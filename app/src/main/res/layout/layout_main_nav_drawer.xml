

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start">

    <!-- The main content view -->
    <!--
    Setting clickable to true in order to resolve bug with Navigation Drawer:
    http://stackoverflow.com/questions/18044277/android-navigation-drawer-bug-using-the-sample
    -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">


        <include android:id="@+id/toolbar" layout="@layout/element_toolbar"/>

        <FrameLayout
            android:id="@+id/frame_contents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@color/background"/>

    </LinearLayout>

    <!-- The navigation drawer -->
    <LinearLayout
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:gravity="start"
        android:background="@color/background"
        android:clickable="true">

        <FrameLayout
            android:id="@+id/frame_nav_drawer_header"
            android:layout_width="match_parent"
            android:layout_height="170dp"/>

        <ListView
            android:id="@+id/drawer_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/nav_drawer_margin"
            android:paddingStart="@dimen/nav_drawer_margin"
            android:paddingLeft="@dimen/nav_drawer_margin"
            android:paddingEnd="@dimen/nav_drawer_margin"
            android:paddingRight="@dimen/nav_drawer_margin"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:background="@color/nav_drawer_bg"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>