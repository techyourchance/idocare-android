<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_request_status"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/request_thumbnail_status_bar_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/text_view_default_padding"
        android:paddingStart="@dimen/text_view_default_padding"
        android:paddingRight="@dimen/text_view_default_padding"
        android:paddingEnd="@dimen/text_view_default_padding"
        android:gravity="start|center_vertical"
        android:textSize="@dimen/thumbnail_status_text_size"/>

    <TextView
        android:id="@+id/txt_request_fine_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/request_thumbnail_status_bar_height"
        android:layout_toRightOf="@id/txt_request_status"
        android:layout_toEndOf="@id/txt_request_status"
        android:paddingLeft="@dimen/text_view_default_padding"
        android:paddingStart="@dimen/text_view_default_padding"
        android:paddingRight="@dimen/text_view_default_padding"
        android:paddingEnd="@dimen/text_view_default_padding"
        android:gravity="end|center_vertical"
        android:textSize="@dimen/thumbnail_coarse_location_text_size"/>

</merge>