<resources>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="buttonStyle">@style/DefaultButtonStyle</item>
        <item name="buttonBarStyle">@style/DefaultButtonStyle</item>
        <item name="buttonBarButtonStyle">@style/DefaultButtonStyle</item>
        <item name="android:textViewStyle">@style/DefaultTextViewStyle</item>
    </style>


    <style name="ActionBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="DefaultButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/green_button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LoginEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="DefaultTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/default_text_size</item>

    </style>

    <style name="NicknameTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/nickname_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DateTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/date_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/smallest_text_size</item>
    </style>

    <style name="ReputationTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/reputation_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="ReputationTextViewStyleSmall" parent="ReputationTextViewStyle">
        <item name="android:textSize">@dimen/tiny_text_size</item>
    </style>

    <style name="StatusTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="GreenTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/light_green</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

</resources>
